<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/simple"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/checkable_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/simple"
            android:textColor="@color/title_text"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/selectable"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/checkable_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/selectable"
            android:textColor="@color/title_text"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/only_one_opened"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1.5"
            android:background="@drawable/checkable_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/only_one_opened"
            android:textColor="@color/title_text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/affecting_other_childs"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:background="@drawable/checkable_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/affecting_other_childs"
            android:textColor="@color/title_text"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/nodes"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/checkable_background"
            android:button="@null"
            android:gravity="center"
            android:text="@string/nodes"
            android:textColor="@color/title_text"
            android:textSize="18sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp" />

</LinearLayout>
